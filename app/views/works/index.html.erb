<h1>Listing works</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @works.each do |work| %>
  <tr>
    <td><%=h work.name %></td>
    <td><%= link_to 'Show', work %></td>
    <td><%= link_to 'Edit', edit_work_path(work) %></td>
    <td><%= link_to 'Destroy', work, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New work', new_work_path %>